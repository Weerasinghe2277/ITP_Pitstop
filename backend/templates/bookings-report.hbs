{{#if bookingsByStatus.length}}
<div class="table-section">
    <h2 class="table-title">Bookings by Status</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Status</th>
                <th>Count</th>
                <th>Percentage</th>
            </tr>
        </thead>
        <tbody>
            {{#each bookingsByStatus}}
            <tr>
                <td><span class="status {{status}}">{{status}}</span></td>
                <td>{{count}}</td>
                <td>{{percentage}}%</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

{{#if bookingsByServiceType.length}}
<div class="table-section">
    <h2 class="table-title">Bookings by Service Type</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Service Type</th>
                <th>Count</th>
                <th>Percentage</th>
                {{#unless isCashier}}
                <th>Average Cost</th>
                {{/unless}}
            </tr>
        </thead>
        <tbody>
            {{#each bookingsByServiceType}}
            <tr>
                <td>{{serviceType}}</td>
                <td>{{count}}</td>
                <td>{{percentage}}%</td>
                {{#unless ../isCashier}}
                <td>LKR {{formatCurrency averageCost}}</td>
                {{/unless}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

<div class="table-section">
    <h2 class="table-title">Bookings Details</h2>
    <table class="data-table {{#if isCashier}}cols-7{{else}}cols-8{{/if}}">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Customer</th>
                <th>Vehicle</th>
                <th>Service Type</th>
                <th>Scheduled Date</th>
                <th>Status</th>
                <th>Priority</th>
                {{#unless isCashier}}
                <th>Estimated Cost</th>
                {{/unless}}
            </tr>
        </thead>
        <tbody>
            {{#each bookings}}
            <tr>
                <td>{{bookingId}}</td>
                <td>{{customerName}}</td>
                <td>{{vehicleInfo}}</td>
                <td>{{serviceType}}</td>
                <td>{{formatDate scheduledDate}}</td>
                <td><span class="status {{status}}">{{status}}</span></td>
                <td><span class="status {{priority}}">{{priority}}</span></td>
                {{#unless ../isCashier}}
                <td>LKR {{formatCurrency estimatedCost}}</td>
                {{/unless}}
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>