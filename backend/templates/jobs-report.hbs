{{#if jobsByCategory.length}}
<div class="table-section">
    <h2 class="table-title">Jobs by Category</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Category</th>
                <th>Count</th>
                <th>Percentage</th>
                <th>Average Hours</th>
            </tr>
        </thead>
        <tbody>
            {{#each jobsByCategory}}
            <tr>
                <td>{{category}}</td>
                <td>{{count}}</td>
                <td>{{percentage}}%</td>
                <td>{{averageHours}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

{{#if jobsByStatus.length}}
<div class="table-section">
    <h2 class="table-title">Jobs by Status</h2>
    <table class="data-table">
        <thead>
            <tr>
                <th>Status</th>
                <th>Count</th>
                <th>Percentage</th>
            </tr>
        </thead>
        <tbody>
            {{#each jobsByStatus}}
            <tr>
                <td><span class="status {{status}}">{{status}}</span></td>
                <td>{{count}}</td>
                <td>{{percentage}}%</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}

<div class="table-section">
    <h2 class="table-title">Job Details</h2>
    <table class="data-table cols-10">
        <thead>
            <tr>
                <th>Job ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Assigned Technician</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Estimated Hours</th>
                <th>Actual Hours</th>
                <th>Created Date</th>
                <th>Completion Date</th>
            </tr>
        </thead>
        <tbody>
            {{#each jobs}}
            <tr>
                <td>{{jobId}}</td>
                <td>{{title}}</td>
                <td>{{category}}</td>
                <td>{{technicianName}}</td>
                <td><span class="status {{status}}">{{status}}</span></td>
                <td><span class="status {{priority}}">{{priority}}</span></td>
                <td>{{estimatedHours}}</td>
                <td>{{actualHours}}</td>
                <td>{{formatDate createdAt}}</td>
                <td>{{formatDate completedAt}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>