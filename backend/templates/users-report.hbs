{{#if roleDistribution.length}}
<div class="table-section">
  <h2 class="table-title">Role Distribution</h2>
  <table class="data-table cols-5">
    <thead>
      <tr>
        <th>Role</th>
        <th>Total Count</th>
        <th>Active</th>
        <th>Inactive</th>
        <th>Percentage</th>
      </tr>
    </thead>
    <tbody>
      {{#each roleDistribution}}
      <tr>
        <td>{{role}}</td>
        <td>{{count}}</td>
        <td>{{active}}</td>
        <td>{{inactive}}</td>
        <td>{{percentage}}%</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{/if}}

<div class="table-section">
  <h2 class="table-title">User Details</h2>
  <table class="data-table cols-9">
    <thead>
      <tr>
        <th>User ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Phone</th>
        <th>Specialization</th>
        <th>Status</th>
        <th>Registered</th>
        <th>Last Login</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{userId}}</td>
        <td>{{firstName}} {{lastName}}</td>
        <td>{{email}}</td>
        <td>{{role}}</td>
        <td>{{#if phone}}{{phone}}{{else}}-{{/if}}</td>
        <td>{{#if specialization}}{{specialization}}{{else}}-{{/if}}</td>
        <td>{{#if isActive}}Active{{else}}Inactive{{/if}}</td>
        <td>{{formatDate createdAt}}</td>
        <td>{{#if lastLogin}}{{formatDate lastLogin}}{{else}}-{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>